<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigTareasActivity">

    <TextView
        android:id="@+id/tag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bevan"
        android:text="Seleccione las tareas:"
        android:textColor="#0C0C0C"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnGuardarSelecTareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borde_redondo"
        android:fontFamily="@font/artifika"
        android:text="Guardar"
        android:textColor="#080809"
        android:layout_below="@+id/tag2"
        android:layout_centerHorizontal="true"/>

    <ListView

        android:id="@+id/selecTareas_LV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:scrollbars="vertical"
        android:layout_below="@+id/btnGuardarSelecTareas">

    </ListView>

</RelativeLayout>
</ScrollView>